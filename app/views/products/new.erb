<% @product.errors.full_messages.each do |message| %>
  <div class="alert alert-danger" role="alert">
    <%= message %>
  </div>
<% end %>

<%= form_for @product do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: ["form-control", "form-control-lg"] %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: ["form-control", "form-control-lg"], rows: 4 %>
    </div>

    <div class="form-inline">
      <div class="form-group">
        <%= f.label :quantitiy %>
        <%= f.number_field :quantitiy, step: 1, class: ["form-control", "form-control-lg"]  %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, step: 0.1, class: ["form-control", "form-control-lg"]  %>
      </div>
      <%= f.submit 'Create Product', class: ["btn", "btn-primary"] %>
    </div>

  <% end %>
