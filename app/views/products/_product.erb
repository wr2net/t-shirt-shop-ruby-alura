<tr>
  <td><%=  product.id %></td>
  <td><%=  product.name %></td>
  <td><%=  product.description%></td>
  <td class="text-right">R$ <%=  product.price %></td>
  <td class="text-center"><%=  product.quantitiy %></td>
  <td class="text-center">
    <%= button_to "Remover", product,
                  method: :delete,
                  class: "btn btn-danger",
                  data: { confirm: "Tem certeza que deseja remover o produto?" } %>

  </td>
  <td class="text-center">
    <%= link_to "Edit", edit_product_path(product), class: "btn btn-warning" %>
  </td>
</tr>
